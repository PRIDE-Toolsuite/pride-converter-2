<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>start*</include>
                <include>converter.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/documents</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.pdf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/templates</directory>
            <outputDirectory>/templates</outputDirectory>
            <includes>
                <include>**/*.xml</include>
                <include>**/*.txt</include>
            </includes>
            <excludes>
                <exclude>contact/*.xml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${jarName}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib/</outputDirectory>
            <excludes>
                <exclude>junit:junit</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
